{
  "name": "unifideck-decky",
  "version": "0.5.2",
  "description": "Unified game library for Steam Deck - Epic, GOG, and Steam in one place",
  "type": "module",
  "scripts": {
    "build": "rollup -c rollup.config.mjs",
    "watch": "rollup -c -w",
    "test": "echo \"Error: no test specified\" && exit 1",
    "check:prettier": "prettier --config .prettierrc --check",
    "fix:prettier": "prettier --config .prettierrc --write",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,md}": "npm run fix:prettier"
  },
  "keywords": [
    "decky",
    "plugin",
    "steamdeck",
    "epic",
    "gog",
    "amazon",
    "library"
  ],
  "author": "numan",
  "license": "LGPL-3.0-or-later",
  "devDependencies": {
    "@decky/rollup": "^1.0.2",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.1",
    "@types/webpack": "^5.28.5",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^2.8.8",
    "rollup": "^4.53.3",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@decky/api": "^1.1.3",
    "@decky/ui": "^4.11.1",
    "i18next": "^25.7.4",
    "react-i18next": "^16.5.3",
    "react-icons": "^5.3.0",
    "tslib": "^2.7.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    }
  }
}
